<%- include('../partials/header.ejs', {name: "Edit " + recipe.name}) %>
    <h1>Edit the recipe <%= recipe.name %> by <%= recipe.ingredients %></h1>
    <form method="POST" action="/recipes/<%= recipe._id %>?_method=PUT">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%=recipe.name%>" />
        <br>
        <label for="ingredients">Ingredients:</label>
        <input type="text" name="ingredients" id="ingredients"  value=<%= recipe.ingredients %>>
        <br>
        <label for="prep-time">Prep-time: </label>
        <input type="text" name="prep-time" id="prep-time"  value=<%= recipe.prep-time %>>
        <br>
        <input type="submit" value="Edit <%= recipe.name %>">
    </form>
</body>
</html>