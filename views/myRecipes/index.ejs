<%- include('../partials/header.ejs', {name: "All books", styleSheet: "/scripts/booksIndex.js"}) %>
    <h1>Here are all of my books!</h1>
    <input type="text" id="searchText">
    <a href="/books" id="link">
        <button id="searchSubmit">Search by author</button>
    </a>
    <% for(let i = 0; i < books.length; i++) { %>
        <a href='books/<%= books[i]._id %>'>
            <h2>Title: <%= books[i].title %></h2>
        </a>
            <h3>Author: <%= books[i].author %></h3>
            <h3>Price: $<%= books[i].price %></h3>
        <hr>
    <% } %>
<%- include('../partials/footer.ejs') %>