<%- include("../partials/header.ejs", {pageTitle: "Signup for an account"}) %>
<main>
    <div class="divForm">
        <h1>Signup for an account</h1>
        <form method="POST" action="/signup">
        <label for="email">Email:</label>
        <input type="text" name="email" id="email" placeholder="something@gmail.com">
        <br>
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" placeholder="abc123">
        <br>
        <label for="password">Password:</label>
        <input type="text" name="password" id="password">
        <br>
        <input type="submit" value="Create a new user">
        </form>
    </div>
</main>
