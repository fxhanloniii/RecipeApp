<%- include('./partials/header.ejs', {pageTitle: "All recipes"}) %>
    <main>
        <h1>Here are all of my recipes</h1>
    <div class="recipes">
    <% for(let i=0; i < 100 ? i < recipes.length : i < 20; i++) { %>
        <div class="recipeDiv" >
        <a href='recipes/<%= recipes[i]._id %>'>
            <h3><%= recipes[i].recipe_name %></h3>
            <img src="<%= recipes[i].image %>" >
        </a>
    </div>
    <% } %>
</div>
</main>
